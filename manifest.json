{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Hate Shield",
  "action": {
    "default_popup": "index.html",
    "default_icon": "shield.png"
  },
  "permissions": ["tabs", "storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["style.css"],
      "js": ["replaceBadWords.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["badWords.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
